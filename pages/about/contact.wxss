page {  
  background-color: #0084ff;
}
swiper-item{
  margin-top: 35rpx;
}
swiper-item .user-box{  
  margin-top: 5%;
  margin-bottom: 3%;
  margin-left: 20rpx;
  border-radius: 20rpx;  
   border: 1rpx solid rgba(200, 200, 200, 0.1);
  box-shadow: 1px 1px 5px rgba(200, 200, 200, 0.4);
  background-color: #fff;
}
swiper-item .user-image image{
  width:300rpx;
  height:300rpx;
  border-radius: 250rpx;
  margin-top: 20%;
  border: 1rpx solid #fff;
  box-shadow: 1px 1px 5px rgba(200, 200, 200, 0.8);
}
.user-image{
  margin: 0 25%;
}
.user-info {
  text-align: center;
  height: 210rpx;
}
.user-info view{
  text-align: center;
}
.user-info .user-job{
  width: 65%;
  height: 100rpx;
  margin: 0 auto;
  font-size: 45rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  margin-top: 60rpx;
  color: white;
  background-color: #0084ff;
}
.user-info .user-name{
  margin-top: 20rpx;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: black;
  font-weight: 600;
}
.user-info .user-introduce{
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #5d5d5b;
}
.joinin{
  width: 35%;
  margin: 0 auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  margin-top: 120rpx;
  color: #fff;
  border-radius: 60rpx;
  background-color: #118fff;
}